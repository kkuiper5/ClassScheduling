<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Schedule Builder</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Styles/builder.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/Styles/calendar_green.css" />
    <script src="~/Scripts/daypilot-all.min.js" type="text/javascript"></script>
    @model ClassScheduling.Models.Student
</head>
<body>
    <div class="img2">
        <img src="~/Content/Images/builderH2.jpg" />
    </div>
    <div class="dropdown">
        <button class="dropbtn">Semester</button>
        <div class="dropdown-content">
            <a href="#">Winter 2019</a>
            <a href="#">Spring/Summer 2019</a>
            <a href="#">Fall 2019</a>
            <a href="#">Winter 2020</a>
        </div>
    </div><br />
      <div class="upper">
          <div class="checkMenu">
              <div class="left">
                  <h4>Desired Day(s)</h4>
                  <div id="day">
                      <label class="container">
                          Monday
                          <input type="checkbox" checked="checked">
                          <span class="checkmark"></span>
                      </label>
                      <label class="container">
                          Tuesday
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                      <label class="container">
                          Wednesday
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                      <label class="container">
                          Thursday
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                      <label class="container">
                          Friday
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                  </div>
                  <h4>Time of Day</h4>
                  <div id="time">
                      <label class="container">
                          Morning [8-11]
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                      <label class="container">
                          Midday [11-2]
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                      <label class="container">
                          Afternoon [2-5]
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                      <label class="container">
                          Evening [5-10]
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                  </div>
              </div>
              <div class="right">
                  <h4>Location</h4>
                  <div id="campus">
                      <label class="container">
                          W.A. Lettinga [GR]
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                      <label class="container">
                          Cook Center [GR]
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                      <label class="container">
                          Holland
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                      <label class="container">
                          Lansing
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                      <label class="container">
                          Detroit
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                  </div>
                  <h4>Class Format</h4>
                  <div id="format">
                      <label class="container">
                          In-seat [15 week]
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                      <label class="container">
                          Online [7-week]
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                      <label class="container">
                          In-seat accelerated [7 week]
                          <input type="checkbox">
                          <span class="checkmark"></span>
                      </label>
                  </div>
              </div>
          </div>
          <div id="courseList">

          </div>
      </div>
      <div id="dp">
          <script type="text/javascript">
          var dp = new DayPilot.Calendar("dp");
          dp.viewType = "Week";
          dp.theme = "calendar_green";
          dp.init();
          </script>
      </div>
</body>
</html>